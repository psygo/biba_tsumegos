\newcommand\StoneColor[1]{%
  \ifcsname thecolorat#1\endcsname
    \csname thecolorat#1\endcsname
  \else
    white%
  \fi
}

\newcommand{\textLabel}[3]{
  \setCoords{#2}

  \fontfamily{lmr}
  
  \pgfmathsetmacro{\xCoord}{\x * \step}
  \pgfmathsetmacro{\yCoord}{\y * \step}

  \draw (\xCoord, \yCoord) [
    fill      = \StoneColor{#2},
    draw      = \StoneColor{#2},
    inner sep = 0pt,
  ] 
    circle [radius = \stoneRadius * 0.6375cm];

  \draw (\xCoord, \yCoord) 
    node[
      color     = -\StoneColor{#2},
      font      = \fontsize{9.625pt}{9pt}\selectfont,
    ] {#3};
}

% TODO: Why are the triangle labels behaving so weirdly?
\newcommand{\triangleLabel}[2]{
  \setCoords{#2}
  
  \pgfmathsetmacro{\xCoord}{\x * \step}
  \pgfmathsetmacro{\yCoord}{\y * \step}

  \pgfmathsetmacro{\yCoordLabelBackgroundShifted}{(\y * \step) + 0.000475cm}

  \draw (\xCoord, \yCoordLabelBackgroundShifted) [
    fill      = \StoneColor{#2},
    draw      = \StoneColor{#2},
    inner sep = 0pt,
  ] 
    circle [radius = \stoneRadius * 0.6375cm];

  \pgfmathsetmacro{\yCoordLabelShifted}{(\y * \step) - 0.00065cm}

  \draw (\xCoord, \yCoordLabelShifted) 
    node[
      isosceles triangle,
      draw                          = #1,
      color                         = -\StoneColor{#2},
      fill                          = \StoneColor{#2},
      line width                    = \stoneRadius * 1.55mm,
      minimum height                = \stoneRadius * 0.89cm,
      minimum width                 = \stoneRadius * 0.89cm,
      rotate                        = 90,
      isosceles triangle apex angle = 60,
      inner sep                     = 0pt,
    ] {};
}

\newcommand{\crossLabel}[2]{
  \setCoords{#2}
  
  \pgfmathsetmacro{\xCoord}{\x * \step}
  \pgfmathsetmacro{\yCoord}{\y * \step}

  \draw (\xCoord, \yCoord) 
    node[
      color     = -\StoneColor{#2},
      fill      = \StoneColor{#2},
      font      = \fontsize{9.75pt}{9pt}\selectfont,
      inner sep = 0pt
    ] {$\boldsymbol{\times}$};
}