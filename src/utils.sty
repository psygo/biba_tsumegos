\newcommand\blankpage{
  \clearpage
  \begingroup
    \null
    \thispagestyle{empty}%
    \addtocounter{page}{-1}%
    \hypersetup{pageanchor=false}%
    \clearpage
  \endgroup
}

\newcommand\shref[2]{
  \small{\href{#1}{\path{#2}}}
}