% An unnumbered page.
% From [this answer](https://tex.stackexchange.com/a/331068/64441).
\newcommand\blankpage{
  \pagenumbering{gobble}
  \clearpage
  \begingroup
    \null
    \thispagestyle{empty}%
    \addtocounter{page}{-1}%
    \hypersetup{pageanchor=false}%
    \clearpage
  \endgroup
}

\newcommand\clearedpage{
  \clearpage
  \begingroup
    \null
    \clearpage
  \endgroup
}

