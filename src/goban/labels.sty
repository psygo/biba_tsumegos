      inner sep    = 0pt,
    ] {};
}

\newcommand{\crossLabel}[2]{
  \setCoords{#2}

  \fontfamily{lmr}
  
  \pgfmathsetmacro{\xCoord}{\x * \step}
  \pgfmathsetmacro{\yCoord}{\y * \step}

  \draw (\xCoord, \yCoord) 
    node[
      color     = -\StoneColor{#2},
      fill      = \StoneColor{#2},
      font      = \fontsize{9.75pt}{9pt}\selectfont,
      inner sep = 0pt
    ] {$\boldsymbol{\times}$};
}