    \begin{goban}[board dimension       = 9,
                  board size            = 19,
                  scale                 = 1,
                  outline line width    = 0.55mm,
                  horizontal clip start = 9,
                  horizontal clip end   = 19,
                  vertical clip start   = 1,
                  vertical clip end     = 10.5]
      \parseSgfFile{\problemPath}
    \end{goban}
  \end{minipage}\hfill
}

